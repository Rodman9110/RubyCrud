<h1><%= name %> Article</h1>

<%= form_for(@article) do |f| %>
    <% @article.errors.full_messages.each do |message| %>   
            <div class="be-red white">
            *<%= message %>
            </div>
        <%end%>
    <div class="field">
    <%= f.text_field :title,placeholder: "Titulo", class:"form-control" %>
    </div>

    <div class="field ">
    <%= f.text_area :body,placeholder: "Escribe articulo...", 
    class:"form-control", style:"height:250px;" %>
    </div>

    <div class="field">
    <%= f.submit "Guardar",class:"btn" %>
    </div>

    <%end%>